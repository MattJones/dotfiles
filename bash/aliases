alias reload='source ~/dotfiles/bash/aliases'
alias h=history

alias l='ls'
alias ll='ls -alh'

alias g=git
alias s='git status'
alias d='git diff'
alias a='git add'
alias c='git commit'

if [[ ( $OSTYPE == darwin* ) ]]; then
	alias vim='mvim -v'
	alias tmux='~/dotfiles/tmux_wrapper'
fi

if [ "$OSTYPE" == "linux-gnu" ]; then
	alias tmux='tmux -2'
fi

alias ev='vim ~/.vimrc'
alias ea='vim -v ~/dotfiles/bash/aliases && reload'

