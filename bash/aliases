# vi: set ft=sh :

alias reload='source ~/dotfiles/bash/aliases'
alias h=history
alias hgrep='history | grep'

alias l='ls'
alias ll='ls -alh'

alias g=git
alias s='git status'
alias d='git diff'
alias a='git add'
alias c='git commit'

alias tmux='~/dotfiles/tmux_wrapper'

if [[ ( $OSTYPE == darwin* ) ]]; then
	alias vim='mvim -v'
fi

alias ev='vim ~/.vimrc'
alias ea='vim -v ~/dotfiles/bash/aliases && reload'
alias eg='vim ~/.gitconfig'
